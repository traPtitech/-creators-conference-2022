mixin group(group)
  .group-wrapper
    .group
      h3.name= group.name
      p.desc= group.desc
      button.toggle-details もっと詳しく
      .details.hidden
        .inner-wrapper
          each line in group.details.desc
            p !{line}
          each img in group.details.img
            a.img(href=img)
              img(src=img loading="lazy")
          if group.details.slide.length > 0
            .slides
              each img, i in group.details.slide
                .slide(is-selected=(i === 0))
                  img(src=img loading="lazy")
          button.toggle-details 閉じる
